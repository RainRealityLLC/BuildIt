			.col-sm-3
				.space

			.col-sm-3
				#slider.col-xs-12
					// Top part of the slider
					.row
						#carousel-bounding-box.col-sm-12
							#myCarousel.carousel.slide
								// Carousel items
								.carousel-inner
									.active.item(data-slide-number='0')
										img(src='/images/model-previews/audi.jpg')
