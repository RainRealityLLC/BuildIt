	#main_area
		h1="Browse Models"
		// Slider
		.row
			#slider-thumbs.col-sm-4
				// Bottom switcher of slider
				ul.hide-bullets
					li.col-sm-3
						a#carousel-selector-0.thumbnail
							img(src='/images/model-previews/audi.jpg')
