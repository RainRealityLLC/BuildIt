append styles
	// Custom styles for this template
	link(href='/css/index.css', rel="stylesheet")
	link(href='/css/build.css', rel="stylesheet")

	script(src="/js/three.min.js")


block body
	+navbar(title,"navbar","inverse")
		+nav_item("/") Home
		+nav_item("/build","active") Build
		+nav_item("/browse") Browse
		+nav_item("/about") About


	.row
		.col-md-4.build-form
			h1 Build Project
			.row
				.col-md-6
					button.btn.btn-primary.btn-lg(type='button') Back
				.col-md-6
					button.btn.btn-primary.btn-lg(type='button') Next
			.row
				form
					.input-group
						input(type='text', required='')
						span.highlight
						span.bar
						label Name
					.input-group
						input(type='text', required='')
						span.highlight
						span.bar
						label Author
		#build-view-canvas.col-md-4
			script(src='/js/modelviewer.js')
